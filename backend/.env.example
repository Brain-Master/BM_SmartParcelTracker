# Copy to .env and adjust. Never commit .env with secrets.
# Backend configuration

# Database connection (required)
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/smart_parcel

# Redis connection (required)
REDIS_URL=redis://localhost:6379/0

# API Keys (optional, required for AI features)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Currency API (optional, has default)
# CBR_API_URL=https://www.cbr-xml-daily.ru/daily_json.js

# JWT Secret (required for auth)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# CORS Origins (comma-separated, optional)
# BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000
